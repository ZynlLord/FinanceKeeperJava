<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/calculator_button_bg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="PurpleSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/purple_seekbar_progress</item>
        <item name="android:thumb">@drawable/purple_seekbar_thumb</item>
        <item name="android:thumbOffset">8dp</item> <!-- Смещение ползунка для центрирования -->
    </style>
</resources>